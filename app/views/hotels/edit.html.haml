%h1 Edit hotel
%p
  = link_to 'List', hotels_path
= simple_form_for :hotel, :url => hotel_path(@hotel), :method => :put do |f|
  - if @hotel.errors.any?
    #error_explanation
    %h2
      = pluralize(@hotel.errors.count, "error")
      prohibited this article from being saved:
    %ul
      - @hotel.errors.full_messages.each do |msg|
        %li= msg
  %table{:border => "1", :cellpadding => "5px"}
    %tr
      %td
        %p
          = f.label :title
      %td
        = f.text_field :title
    %tr
      %td
        = f.label :breakfast
      %td
        = f.input_field :breakfast, as: :boolean, boolean_style: :inline
    %tr
      %td
        = f.label :description
      %td
        = f.text_area :description
    %tr
      %td{:colspan => 2}
        = f.input :photo, as: :file
    %tr
      %td
        = f.label :price
      %td
        = f.text_field :price
    %tr
      %td
        = f.label :address
      %td
        = f.text_field :address
    %tr
      %td{:colspan => 2}
        = f.button :submit
