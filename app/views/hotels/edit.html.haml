%br
%h1 Edit hotel
%br
= simple_form_for :hotel, :url => hotel_path(@hotel), :method => :put do |f|
  - if @hotel.errors.any?
    #error_explanation
    %h2
      = pluralize(@hotel.errors.count, "error")
      prohibited this article from being saved:
    %ul
      - @hotel.errors.full_messages.each do |msg|
        %li= msg
  %table{:border => "0", :cellpadding => "5px"}
    %tr
      %td
        %p
          = f.label :title
      %td
        = f.text_field :title
    %tr
      %td
        = f.label :breakfast, required: false
      %td
        = f.input_field :breakfast, as: :boolean, boolean_style: :inline
    %tr
      %td
        = f.label :description, required: false
      %td
        = f.text_area :description
    %tr
      %td{:colspan => 2}
        = f.input :photo, as: :file, required: false
    %tr
      %td
        = f.label :price, required: false
      %td
        = f.text_field :price
    %tr
      %td
        = f.label :country, required: false
      %td
        = f.text_field :country
    %tr
      %td
        = f.label :state, required: false
      %td
        = f.text_field :state
    %tr
      %td
        = f.label :city, required: false
      %td
        = f.text_field :city
    %tr
      %td
        = f.label :street, required: false
      %td
        = f.text_field :street
    %tr
      %td{:colspan => 2}
        = f.button :submit
